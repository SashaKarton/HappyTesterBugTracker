@using HappyTesterWeb.ViewModels
@model DashboardChangePasswordViewModel


<form method="post" asp-action="EditProfile" enctype="multipart/form-data">
    <input type="hidden" id="Id" name="Id" asp-for="Id" />
   <div class="mb-3">
    <label asp-for="Password" class="form-label">Password<span class="text-danger">*</span></label> 
    <input asp-for="Password" class="form-control" placeholder="Password">
    <span asp-validation-for="Password" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="NewPassword" class="form-label">New Password</label>
    <input asp-for="NewPassword" class="form-control" rows="3">
    <span asp-validation-for="NewPassword" class="text-danger"></span>
  </div>

  <div class="mb-3">
    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
    <input asp-for="ConfirmPassword" class="form-control" placeholder="Last name">
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
  </div>
  
  <input type="submit" value="Save">
  <a asp-controller="dashboard" asp-action="Profile" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>

</form>