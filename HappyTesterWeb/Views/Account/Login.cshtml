@using HappyTesterWeb.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<!--Validation-->

<div class="row">
    <div class="col-md-6 offset-3">
        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }
<!--Start of the Card-->
<div class="wrapper">
      <div class="block-center mt-4 wd-xl">
<div class="card card-flat">
    <div class="card-body">
         <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
         <form asp-action="Login">
             
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                 <label asp-for="EmailAddress" class="control-label"></label>
                 <input asp-for="EmailAddress" class="form-control">
                 <span asp-validation-for="EmailAddress" class="text-danger"></span>
                 <em class="fa fa-envelope"></em>
              </div>                       

              <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
                <em class="fa fa-lock"></em>
              </div>
              <!--Remember me UNDER CONSTRUCTION-->
            <div class="clearfix">
               <div class="checkbox c-checkbox float-left mt-0">
                  <label>
                     <input type="checkbox" value="" name="remember" />
                     <span class="fa fa-check"></span>Remember Me</label>
               </div>
               <!--Remember me END-->
               <!--Forgot password UNDER CONSTRUCTION-->
               <div class="float-right"><a class="text-muted" href="/pages/recover">Forgot your password?</a>
               </div>
               <!--Forgot password END-->
            </div>
            
            
            <div class="form-group">
                <input class="btn btn-block btn-primary mt-3" type="submit" value="Log in" />
            </div>
         </form>
         <p class="pt-3 text-center">Need to Signup?</p>         
         <a asp-controller="account" asp-action="register"  class="btn btn-block btn-secondary">Register Now</a>
      </div>
 </div>
 </div>
 </div>
 </div>
 </div>
   <!--End of the Card-->
