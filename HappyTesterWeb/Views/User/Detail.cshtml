@using HappyTesterWeb.ViewModels
@model UserDetailViewModel


<div class="container">
    <div class="main-body">  

          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>@Model.FirstName @Model.LastName</h4>
                      <button class="btn btn-primary">Change photo</button>                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Username</h6>
                    </div>
                    <div class="col-sm-9 text-primary">
                      @Model.UserName
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-primary">
                      @Model.Email
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-primary">
                      @Model.PhoneNumber
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a asp-controller="user" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                    </div>
                    <div class="col-sm-12">
                      <a asp-controller="user" asp-action="EditPassword" asp-route-id="@Model.Id" class="btn btn-secondary">Change password</a>
                    </div>
                  </div>
                </div>
              </div>
